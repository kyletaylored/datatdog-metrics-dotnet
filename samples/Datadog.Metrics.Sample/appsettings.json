{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "Datadog.Metrics": "Debug"
    }
  },
  "DatadogMetrics": {
    "ApiKey": "",
    "Site": "datadoghq.com",
    "Host": null,
    "Prefix": "sample_app.",
    "DefaultTags": [
      "env:development",
      "service:datadog-metrics-sample",
      "version:1.0.0"
    ],
    "FlushIntervalSeconds": 5,
    "MaxRetries": 3,
    "RetryBackoffSeconds": 1,
    "MaxBufferSize": 1000,
    "HttpTimeoutSeconds": 10,
    "Histogram": {
      "Aggregates": [
        "Max",
        "Median",
        "Avg",
        "Count"
      ],
      "Percentiles": [
        0.95,
        0.99
      ]
    }
  }
}
